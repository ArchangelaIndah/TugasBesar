<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:backgroundTint="#FFDBA4"
    android:layout_margin="15dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/icon_reservasi"
            android:layout_width="125dp"
            android:layout_marginTop="15dp"
            android:layout_height="110dp"
            android:src="@drawable/icon_reservasi"
            android:padding="20dp"
            app:layout_constraintEnd_toStartOf="@+id/text_review"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black"
            />
        <TextView
            android:id="@+id/text_review"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:text="Review"
            android:layout_marginLeft="118dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/icon_edit"
            />
        <TextView
            android:id="@+id/text_saran"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="118dp"
            android:layout_marginTop="10dp"
            tools:text="Saran"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_review"
            app:layout_constraintEnd_toStartOf="@+id/icon_edit"
            />

        <ImageView
            android:id="@+id/icon_edit"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_edit"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#083AA9"
            />
        <ImageView
            android:id="@+id/icon_delete"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_delete"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/icon_edit"
            app:layout_constraintEnd_toEndOf="@+id/icon_edit"
            app:tint="#E14D2A"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>